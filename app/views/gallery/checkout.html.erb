<div class="title">
  <span class="title_icon">
    <img src="/assets/bullet1.gif" alt="" />
  </span>Checkout
</div>

<div class="feat_prod_box_details">        
  <div class="contact_form">     

    <div class="form_subtitle">Please enter your card details</div>  
    <div class="form_row">
      <div class="error_messages"><%= flash[:notice]%></div>
    </div>

    <%= form_for(:check) do |f| %>

      <div class="form_row">
      <%= f.label :first_name,:class=>"contact"  %>
      <%= f.text_field :first_name,:class=>"contact_input" %>
      </div>
      <div class="form_row">
      <%= f.label :last_name,:class=>"contact" %>
      <%= f.text_field :last_name,:class=>"contact_input" %>
      </div>
      <div class="form_row">
      <%= f.label :credit_card_no,:class=>"contact" %>
      <%= f.text_field :credit_no,:class=>"contact_input" %>
      </div>
      <div class="form_row">
      <%= f.label :amount,:class=>"contact" %>
       <%= number_to_currency(params[:amount]) %>
      </div>


      <div class="form_row">
        <%= f.label :date_of_expiry,:class=>"contact" %>
        <select name="check[month]" id="check_out_month",:class=>"contact_input">
          <option selected value="01">Janurary 
          <option  value="02">Feburary
          <option  value="03">March
          <option  value="04">April 
          <option  value="05">May 
          <option  value="06">June 
          <option  value="07">July 
          <option  value="08">August 
          <option  value="09">September 
          <option  value="10">October 
          <option  value="11">November 
          <option  value="12">December 
        </select>
        <select name="check[year]" id=check_out_year",:class=>"contact_input">
          <option selected value="2013">2013
          <option  value="2014">2014
          <option  value="2015">2015
          <option  value="2016">2016
          <option  value="2017">2017
          <option  value="2018">2018
          <option  value="2019">2019
          <option  value="2020">2020
          <option  value="2021">2021
          <option  value="2022">2022
          <option  value="2023">2023
          <option  value="2024">2024
          <option  value="2025">2025
        </select>
      </div>
      <div class="form_row">
        <%= f.label :payment_type,:class=>"contact" %>
        <select name="payment_type",:class=>"contact_input">
          <option value="visa">Visa</option>
          <option value="mastercard">Master Card</option>
        </select>        
      </div>
      <div class="form_row">
        <div class="logo">
            <img src="/assets/Visa-Mastercard-Logo.gif" alt ="" width=200px height=35px />
        </div>
      </div>
        
      <div class="form_row">
      <%= f.label :verification_number,:class=>"contact" %>
      <%= f.text_field :verification_number, :size => 2,:class=>"contact_input" %>
      </div>
      <br/><br/>
      <div class="form_row">
      <%= f.submit "Submit",:class=>"register" %>
      </div>
      <div class="form_row">
        <div class="logo">
            <img src="/assets/secured.gif" alt ="" width=350px height=75px />
        </div>
      </div>              
    <% end %>
  </div>
</div>

